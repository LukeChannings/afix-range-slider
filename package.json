{
  "name": "afix-range-slider",
  "version": "2.0.0",
  "description": "An accessible and flexible range slider web component",
  "main": "dist/Component.js",
  "module": "dist/Component.js",
  "scripts": {
    "start": "hammer serve src e2e",
    "test": "run-p test:*",
    "test:unit": "jest -c config/jest.js",
    "test:e2e": "jest -c config/jest-playwright.js",
    "lint": "run-p lint:*",
    "lint:js": "eslint . --ext .js,.ts --ignore-path .gitignore",
    "lint:css": "stylelint --syntax html '**/*.ts'",
    "lint:ts": "tsc --noEmit",
    "lint:style": "prettier --ignore-path .gitignore  '**/*.{js,ts,css,json,html,yaml}' --check",
    "format": "prettier --ignore-path .gitignore  '**/*.{js,ts,css,json,html,yaml}' --write",
    "build": "run-p build:*",
    "build:types": "tsc --emitDeclarationOnly && mv dist/types/src/Component.d.ts dist/afix-range-slider.d.ts && rm -rf dist/types",
    "build:output": "hammer bundle --minify src/Component.ts dist/afix-range-slider.js"
  },
  "keywords": [
    "Afix",
    "range input",
    "range slider"
  ],
  "author": "Luke Channings <contact@lukechannings.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@types/jest-image-snapshot": "^4.1.3",
    "@types/resize-observer-browser": "^0.1.4",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-jest": "^26.6.3",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest-playwright": "^0.2.1",
    "jest": "^26.6.3",
    "jest-image-snapshot": "github:LukeChannings/jest-image-snapshot",
    "jest-playwright-preset": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.6.0-next.1604802196731",
    "playwright-internal": "github:microsoft/playwright#f7eb845df0cc80f9bac6d6cd806ebfe5b0ed2dca",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-no-unsupported-browser-features": "^4.1.4",
    "typescript": "^4.1.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest-playwright/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-extra-semi": 0,
      "@typescript-eslint/no-non-null-assertion": 0
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true
  },
  "browserslist": [
    "last 1 version",
    "> 1%"
  ],
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ],
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  }
}
