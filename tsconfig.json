{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "types": ["jest-playwright-preset", "expect-playwright", "@types/jest"]
  },
  "exclude": ["coverage"]
}
