{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist/types",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["jest-playwright-preset", "expect-playwright", "@types/jest"]
  },
  "exclude": ["dist"],
  "include": ["**/*.ts"]
}
